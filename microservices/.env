# EmotiBot Microservices Environment Configuration
# Copy this file to .env and update with your actual values

# === GENERAL CONFIGURATION ===
ENVIRONMENT=development
COMPOSE_PROJECT_NAME=emotibot-microservices

# === SECURITY ===
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
AUTH_TOKEN_EXPIRY_HOURS=24

# === DATABASE CONFIGURATION ===
# Auth Service Database
AUTH_DATABASE_URL=postgresql://auth_user:auth_pass@auth-db:5432/authdb
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_pass
AUTH_DB_NAME=authdb

# Conversation Service Database
CONVERSATION_DATABASE_URL=postgresql://conv_user:conv_pass@conversation-db:5432/conversationdb
CONV_DB_USER=conv_user
CONV_DB_PASSWORD=conv_pass
CONV_DB_NAME=conversationdb

# === REDIS CONFIGURATION ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# === RABBITMQ CONFIGURATION ===
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=emotibot
RABBITMQ_PASS=emotibot_pass
RABBITMQ_VHOST=/
RABBITMQ_MANAGEMENT_PORT=15672

# === AI SERVICE CONFIGURATION ===
GEMINI_API_KEY=your_gemini_api_key_here
AI_MOCK_MODE=true

# === API GATEWAY CONFIGURATION ===
KONG_DATABASE=off
KONG_DECLARATIVE_CONFIG=/kong/declarative/kong.yml
KONG_PROXY_ACCESS_LOG=/dev/stdout
KONG_ADMIN_ACCESS_LOG=/dev/stdout
KONG_PROXY_ERROR_LOG=/dev/stderr
KONG_ADMIN_ERROR_LOG=/dev/stderr
KONG_ADMIN_LISTEN=0.0.0.0:8001

# === MONITORING CONFIGURATION ===
# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=15d

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=emotibot123

# Jaeger
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# Elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_JAVA_OPTS=-Xms512m -Xmx512m

# Kibana
KIBANA_PORT=5601

# === SERVICE PORTS ===
FRONTEND_PORT=8001
AUTH_SERVICE_PORT=8002
EMOTION_SERVICE_PORT=8003
CONVERSATION_SERVICE_PORT=8004
AI_SERVICE_PORT=8005
WEBSOCKET_SERVICE_PORT=8006

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_FORMAT=json

# === CORS CONFIGURATION ===
CORS_ALLOWED_ORIGINS=http://localhost:8001,http://127.0.0.1:8001

# === RATE LIMITING ===
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# === HEALTH CHECK CONFIGURATION ===
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# === PERFORMANCE TUNING ===
WORKER_PROCESSES=2
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30 